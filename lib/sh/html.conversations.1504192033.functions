function NOWSPEAKING() {

  # ADD CLASS TO LAST <p>
  # ------------------------------------------------------------------------ #
    CLASS=`echo $1 | tr [:upper:] [:lower:]`
    PCLASS="<p class=\"$CLASS\">"
  # ------------------------------------------------------------------------ #

    LINENUM=`grep -n "<p>" $SRCDUMP | tail -1 | cut -d ":" -f 1`
    sed -i "${LINENUM}s/<p>/$PCLASS/g" $SRCDUMP

}

